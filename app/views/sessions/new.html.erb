<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="form-wrapper">
  <%= form_with(scope: :session, url: sessions_path, local: true, class: "form" ) do |f| %>
    <div class="form__item">
      <%= f.label :email, "Email", class: "form__ttl" %>
      <div class="form__body">
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="form__item">
      <%= f.label :password, "パスワード", class: "form__ttl" %>
      <div class="form__body">
        <%= f.password_field :password %>
      </div>
    </div>
    <%= f.submit "Log in", class: "btn btn-color" %>
  <% end %>
</div>